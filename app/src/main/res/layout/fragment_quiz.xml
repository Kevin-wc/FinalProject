<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12042B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:text="Quick Quiz"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="1. Why is vaping still risky?"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/q1_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/q1_opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Because it has no nicotine."
                android:textColor="@android:color/white" />

            <RadioButton
                android:id="@+id/q1_opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Because it can still cause addiction and lung issues."
                android:textColor="@android:color/white" />

            <RadioButton
                android:id="@+id/q1_opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Because it is more expensive than cigarettes."
                android:textColor="@android:color/white" />
        </RadioGroup>

        <TextView
            android:text="2. Which of these is a healthy alternative mentioned?"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/q2_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/q2_opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switching to another nicotine product."
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/q2_opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ignoring cravings until they go away."
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/q2_opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise and new hobbies."
                android:textColor="@android:color/white"/>
        </RadioGroup>

        <TextView
            android:text="3. What role can friends or community play?"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/q3_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/q3_opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Providing support and accountability."
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/q3_opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buying more vape devices."
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/q3_opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="They have no impact."
                android:textColor="@android:color/white"/>
        </RadioGroup>

        <Button
            android:id="@+id/submitQuizBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Quiz"
            android:backgroundTint="#8900FD"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
