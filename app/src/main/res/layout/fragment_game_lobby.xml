<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12042B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/genreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genreTitle"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lobbyCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lobbyCodeText"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/createLobbyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/createLobbyBtn"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/joinFriendTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/joinFriendTv"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/joinCodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter lobby code"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/joinLobbyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/joinLobbyBtn"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statusText"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/startGameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/startGameBtn"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
